{
    "name": "thaliak-timeline-linter",
    "description": "A linter for Thaliak timeline files.",
    "author": "thaliak.com",
    "license": "MIT",
    "version": "0.0.1",
    "categories": ["Programming Languages", "Linters"],
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:yaml"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "thaliak-timeline-linter.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "thaliak-timeline-linter.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "grammars": [
            {
                "injectTo": ["source.yaml"],
                "scopeName": "source.timeline.template.thaliak",
                "path": "./syntax/template.tmLanguage.json"
            },
            {
                "injectTo": ["source.yaml"],
                "scopeName": "source.timeline.id-expression.thaliak",
                "path": "./syntax/id.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "thaliak-timeline-linter.restart",
                "title": "Restart language server",
                "category": "Thaliak Timeline Linter"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "node ./get-objects.mjs && tsc -b",
        "watch": "node ./get-objects.mjs && tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^18.14.6",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "dotenv-cli": "^7.4.2",
        "eslint": "^8.57.0",
        "mocha": "^10.3.0",
        "typescript": "^5.3.3"
    }
}
